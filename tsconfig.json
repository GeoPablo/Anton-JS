{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@src/*": ["./src/*"],
      "@mocks/*": ["./mocks/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}
